<h1>New reply</h1>

<%= error_messages_for :reply %>

<% form_for([@topic,@reply]) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>
  
  <%= f.hidden_field :forum_id,:value => @topic.forum_id %>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', forum_topic_path(@forum,@topic) %>
